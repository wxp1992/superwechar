<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <RelativeLayout
                android:id="@+id/layout_profile_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_item_selector"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <ImageView
                    android:id="@+id/iv_profile_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"

                    android:src="@drawable/default_hd_avatar"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_profile_nickname"
                    android:text="用户昵称"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_profile_avatar"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_sex_male"
                    android:layout_toRightOf="@+id/tv_profile_nickname"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <TextView
                android:id="@+id/tv_profile_album"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="20dp"
                android:text="设置备注和标签"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/region"
                        style="@style/list_txt_Style_without_right"
                        android:layout_marginTop="20dp"
                        android:text="地区"/>
                </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
                <TextView
                    android:id="@+id/autograph"
                    style="@style/list_txt_Style_without_right"
                    android:text="个性签名"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_add_friend"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#29b104"
        android:text="添加到通讯录"
        android:textColor="#fff"
        android:textSize="20sp"
        />
</LinearLayout>
