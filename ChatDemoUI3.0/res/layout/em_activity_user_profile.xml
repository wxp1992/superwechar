<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_layout_title" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/item_rl_head_ortrait"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_avatar"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#D3D3D3" />

        <RelativeLayout
            android:id="@+id/item_rl_nick"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <TextView
                android:id="@+id/tv_user_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:text="用户昵称"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#D3D3D3" />

        <RelativeLayout
            android:id="@+id/item_rl_weixin"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信号"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <TextView
                android:id="@+id/tv_user_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:text="用户微信号"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#D3D3D3" />

        <RelativeLayout
            android:id="@+id/item_rl_qr_code"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码名片"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_avatar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#D3D3D3" />

        <RelativeLayout
            android:id="@+id/item_rl_address"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的地址"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/item_rl_gender"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:text="未设置"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#D3D3D3" />

        <RelativeLayout
            android:id="@+id/item_rl_region"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:text="未设置"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#D3D3D3" />

        <RelativeLayout
            android:id="@+id/item_rl_autograph"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:text="未填写"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>